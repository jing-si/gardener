<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

 <select id="list" resultType="User">
 	SELECT * FROM USER
 </select>
 

 <select id="item" resultType="User">
 	SELECT * FROM USER 
 	WHERE USER_ID =#{userId}
 </select>

<insert id="add">
	INSERT INTO USER
	VALUES (#{userID},#{userNick},#{userBirth},#{userGender},#{stateId},#{forestId})
</insert>

<update id="update">
	UPDATE USER
	SET USER_ID=#{userId}, USER_NICK=#{userNick}, USER_BIRTH=#{userBirth}, USER_GARDENER=#{userGardener}, STATE_ID=#{stateId}, USER_ID=#{userId}
	WHERE USER_ID=#{userId} 
</update>

<delete id="delete">
	DELETE FROM USER
	WHERE USER_ID=#{userId}
</delete>

</mapper>